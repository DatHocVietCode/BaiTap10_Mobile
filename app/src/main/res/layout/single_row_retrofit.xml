<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/videoView_youtube"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.8"/>
    <ImageView
        android:id="@+id/iv_myProfile_youtube"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:padding="2dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/user"/>
    <ProgressBar
        android:id="@+id/videoProgressBar_youtube"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout_youtube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888">
        <ImageView
            android:id="@+id/img_avatarUploadedUser_youtube"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="@+id/ln_videoName_decs_youtube"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/baseline_person_pin_24"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/singlerow_tv_email_youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/img_avatarUploadedUser_youtube"
            app:layout_constraintBottom_toTopOf="@+id/ln_videoName_decs_youtube"
            android:text="Không có email"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>
        <LinearLayout
            android:id="@+id/ln_videoName_decs_youtube"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/textVideoTitle_youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowRadius="15"
                android:paddingStart="9dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:text="Video Shorts"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:shadowDy="0"
                android:shadowDx="0"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/textVideoDescription_youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="9dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="15"
                android:text="Video Shorts"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_thumb_up_off_alt_24"
                android:layout_gravity="end"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:id="@+id/imgLike_youtube"
                android:backgroundTint="@color/orange_red"
                android:clipToOutline="true"
                />
            <TextView
                android:id="@+id/tv_numLikes_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_thumb_down_off_alt_24"
                android:layout_gravity="end"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:id="@+id/imgDislike_youtube"
                />
            <TextView
                android:id="@+id/tv_numDislikes_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_share_24"
                android:layout_gravity="end"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:id="@+id/imgShare_youtube"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_more_horiz_24"
                android:layout_gravity="end"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:id="@+id/imgMore_youtube"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>